{
  "name": "portfolio",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.1",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "nx": "nx",
    "build": "cp apps/portfolio/next.config.prod.js apps/portfolio/next.config.js && cd apps/portfolio && npx next build",
    "dev": "npx nx dev portfolio",
    "serve": "npx nx serve portfolio",
    "start": "cd apps/portfolio && next start -p $PORT -H 0.0.0.0",
    "lint": "eslint .",
    "test": "npx nx e2e r-lang-portfolio-e2e",
    "test:ci": "npx nx e2e r-lang-portfolio-e2e",
    "test:production": "cypress run --config-file apps/r-lang-portfolio-e2e/cypress.production.config.ts",
    "test:deployment": "npx nx e2e r-lang-portfolio-e2e --spec=\"apps/r-lang-portfolio-e2e/src/e2e/deployment.cy.ts\"",
    "test:debug": "cypress run --config-file apps/r-lang-portfolio-e2e/cypress.production.config.ts --spec=\"apps/r-lang-portfolio-e2e/src/e2e/production.cy.ts\""
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@nx/react": "20.8.0",
    "next": "^14.2.32",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.12.0",
    "resend": "^4.1.2",
    "sharp": "^0.34.1"
  },
  "devDependencies": {
    "@nx/cypress": "20.8.0",
    "@nx/eslint": "20.8.0",
    "@nx/eslint-plugin": "20.8.0",
    "@nx/next": "20.8.0",
    "@nx/workspace": "20.8.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.5",
    "@types/node": "18.17.0",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "cypress": "14.3.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.32",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nx": "20.8.0",
    "postcss": "^8.5.3",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "overrides": {
    "esbuild": "^0.25.4"
  }
}
